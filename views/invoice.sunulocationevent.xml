<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <template id="sle_report_invoice_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt32 mb32" id="sle_event_details">
                <div class="col-xs-4">
                    <table>
                        <tr>
                            <td><strong>Date de l'évènement:</strong></td>
                            <td><p t-field="doc.dateEvent"/></td>
                        </tr>
                        <tr>
                            <td><strong>Lieu de l'évènement:</strong></td>
                            <td><p t-field="doc.lieuEvent"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date de montage du matériel:</strong></td>
                            <td><p t-field="doc.dateMontage"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date de démontage du matériel:</strong></td>
                            <td><p t-field="doc.dateDemontage"/></td>
                        </tr>
                        <tr>
                            <td><strong>Nombre de jours de location:</strong></td>
                            <td><p t-field="doc.nombreJours"/></td>
                        </tr>
                    </table>
                </div>
            </div>
	    </xpath>
     </template>
  </data>
</openerp>