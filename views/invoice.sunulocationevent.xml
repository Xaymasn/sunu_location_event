<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <template id="sle_report_invoice_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt32 mb32" id="sle_event_details">
                <div class="col-xs-3">
                    <strong>Date de l'évènement:</strong>
                    <p t-field="doc.dateEvent"/>
                </div>
                <div class="col-xs-3">
                    <strong>Lieu de l'évènement:</strong>
                    <p t-field="doc.lieuEvent"/>
                </div>
                <div class="col-xs-3">
                    <strong>Date de montage:</strong>
                    <p t-field="doc.dateMontage"/>
                </div>
                <div class="col-xs-3">
                    <strong>Date de démontage:</strong>
                    <p t-field="doc.dateDemontage"/>
                </div>
            </div>
	    </xpath>
     </template>
  </data>
</openerp>