    <!-- Form View -->
    <record model="ir.ui.view" id="sunulocationevent_form">
      <field name="name">sunulocationevent.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
        <form>
          <xpath expr="//field[@name='partner_id']" position="after">
            <field name="lieuEvent" string="Lieu de l'évènement" />
            <field name="dateEvent" />
            <field name="dateMontage" />
            <field name="dateDemontage" />
            <field name="nbJours"/>
          </xpath>
          
          <!-- On ajoute le nombre de jours après la colonne quantité -->
          <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
          </xpath>
        </form>
      </field>
    </record>
    

